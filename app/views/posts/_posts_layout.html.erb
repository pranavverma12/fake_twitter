<table class="scaffoldListTable">
  <thead>
    <tr>
      <th>Post Id</th>
      
      <th>Created By</th>
      
      <th>Description</th>
      
      <th>Photo</th>
      
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to post.id, post %></td>
        
        <td><%= post.user.username %></td>
        
        <td><%= post.description %></td>
        
        <td><img src="<%= post.photo %>" alt="can't display image" style="width: 150px;"></td>
        
        <% if current_user.id == post.user.id %>
          <td><%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, post %></td>
          
          <td>
            <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_post_path(post), title: "Edit User" %>
          </td>
          
          <td>
            <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, title: "Delete Post" %>
          </td>
        <% else %>
          <td></td>
          
          <td></td>
          
          <td></td>
        <% end %>
      </tr>
    <% end %>
  
  </tbody>
</table>
<%= will_paginate posts, class: "apple_pagination" %>